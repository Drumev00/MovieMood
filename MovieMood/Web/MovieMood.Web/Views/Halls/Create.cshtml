@model MovieMood.Web.ViewModels.Halls.InputModels.CreateHallInputModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Hall</h1>

<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Hall Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
    </div>
    <div class="form-group">
        <input asp-controller="Halls" asp-action="Create" type="submit" value="Create" class="btn btn-success" />
    </div>
</form>
