@model MovieMood.Web.ViewModels.Balance.Users.InputModels.DepositMoneyInputModel

<form method="post" asp-action="Deposit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="alert alert-warning">
        @TempData["infoMessage"]
    </div>
    <div class="form-group">
        <label asp-for="Money">How much?</label>
        <input asp-for="Money" type="number" class="form-control">
        <span asp-validation-for="Money" class="text-danger" />
    </div>
    <input asp-area="" asp-controller="Balance" asp-action="Deposit" type="submit" value="Deposit" class="btn btn-primary" />
</form>
