@model MovieMood.Web.ViewModels.Movies.Users.ViewModels.MovieDetailsViewModel
@using MovieMood.Common

@{
    var cloudLink = GlobalConstants.CloudinaryStartUrl + Model.ImagePath;
}
<div class="text-left">
    <h1 style="text-align:left" ; class="font-italic">@Model.Name</h1>
    <img style="width: 340px; height: 340px;" src="@cloudLink" class="img-fluid float-left" />
</div>
<div class="row">
    <div class="col-sm-auto">
        <p>@Model.Resume</p>
    </div>
    <p> <strong style="margin-left:15px; margin-right: 15px">Cast: </strong>@Model.Cast</p>
</div>
<p class="text-left"><strong style="margin-left:15px; margin-right: 15px">Duration: </strong>@Model.Duration</p>
@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
<p class="text-left"><strong style="margin-left:15px; margin-right: 15px">Added At: </strong>@Model.CreatedOn</p>
}
<p class="d-inline"><strong style="margin-left:15px; margin-right: 15px">Genres: </strong></p>
@foreach (var genre in Model.Genres)
{
    if (genre == Model.Genres.Last())
    {
        <p class="d-inline">@genre.</p>
    }
    else
    {
        <p class="d-inline">@genre,</p>
    }
}
<p><strong style="margin: 15px" ;>Director: </strong>@Model.Director</p>
<br />
@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <a style="margin-top: 30px;" href="/Administration/Movies/Delete?movieId=@Model.Id" class="btn btn-danger text-white mt-2 d-inline">Delete Movie</a>
    <a style="margin-top: 30px;" href="/Administration/Movies/Edit?movieId=@Model.Id" class="btn btn-primary text-white mt-2 d-inline">Edit</a>
}
<a style="margin-top: 30px; width: 240px" class="video" href="@Model.Trailer"><i class="video1"></i>WATCH TRAILER</a>